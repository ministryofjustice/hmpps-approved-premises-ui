{% extends "../layout.njk" %}

{% block questions %}

  <h1 class="govuk-heading-l">{{page.title}}
  </h1>

  {% set yesDetails %}
  {{
      formPageTextarea(
        {
          fieldName: "plansInPlaceDetail",
          type: "textarea",
          label: {
            text: page.questions.plansInPlaceDetail
          }
        },
        fetchContext()
      )
    }}
  {% endset -%}

  {% set noDetails %}
  {{
      formPageTextarea(
        {
          fieldName: "plansNotInPlaceDetail",
          type: "textarea",
          label: {
            text: page.questions.plansNotInPlaceDetail
          }
        },
        fetchContext()
      )
    }}
  {% endset -%}

  {{ formPageRadios({
        fieldName: "arePlansInPlace",
        fieldset: {
          legend: {
            text: page.questions.arePlansInPlace,
            classes: "govuk-fieldset__legend--m"
          }
        },
        items: [
          {
            value: "yes",
            text: "Yes",
            conditional: {
              html: yesDetails
            }
          },
          {
            value: "no",
            text: "No",
            conditional: {
              html: noDetails
            }
          }
        ]
    },fetchContext()) }}

{% endblock %}
