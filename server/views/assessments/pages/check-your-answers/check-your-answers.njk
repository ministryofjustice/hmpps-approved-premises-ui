{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "partials/layout-with-details.njk" %}

{% set pageTitle = applicationName + " - " + page.title %}
{% set mainClasses = "app-container govuk-body" %}

{% block beforeContent %}
    {{ govukBackLink({
        text: "Back",
        href: paths.assessments.show({ id: page.assessment.id })
    }) }}
{% endblock %}

{% block content %}

    <div class="govuk-grid-row">
        <div class="govuk-width-container">
            <h1 class="govuk-heading-xl">
                {{ page.title }}
            </h1>

            {% for section in SummaryListUtils.summaryListSections(page.assessment) %}
                {% for task in section.tasks %}
                    {{ govukSummaryList(task) }}
                {% endfor %}
            {% endfor %}

            <form action="{{ paths.assessments.pages.update({ id: assessmentId, task: task, page: page.name }) }}?_method=PUT"
                  method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

                <input type="hidden" name="reviewed" value="1" />

                {{ govukButton({
                    text: "Continue",
                    preventDoubleClick: true
                }) }}
            </form>

        </div>
    </div>
{% endblock %}
