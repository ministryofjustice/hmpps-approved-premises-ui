{% from "govuk/components/date-input/macro.njk" import govukDateInput %}

{% macro formPageDateInput(params, context) %}
  {{
      govukDateInput(
        mergeObjects(
          params,
          { id: params.fieldName, namePrefix: params.fieldName, errorMessage: context.errors[params.fieldName] or context.errors[params.fieldName+'-day'], value: context[params.fieldName] }
        )
      )
  }}
{% endmacro %}
