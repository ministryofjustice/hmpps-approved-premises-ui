{% from "govuk/components/table/macro.njk" import govukTable %}

{% macro sortableTable(govukTableOptions) %}

    {% set attributes = mergeObjects(govukTableOptions.attributes, { 'aria-describedby': 'sortable-table-description' }) %}
    {% set params = mergeObjects(govukTableOptions, { attributes: attributes }) %}

    <p id="sortable-table-description" class="govuk-visually-hidden">Column headers with buttons are sortable.</p>

    {{ govukTable(params) }}

{% endmacro %}
