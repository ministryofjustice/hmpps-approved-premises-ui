{
  "name": "hmpps-community-payback-ui",
  "version": "0.0.1",
  "description": "HMPPS Community Payback Ui",
  "repository": "git@github.com:ministryofjustice/hmpps-community-payback-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "hmpps-precommit-hooks-prepare",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-feature": " node $NODE_DEBUG_OPTION --env-file=feature.env dist/server.js | bunyan -o short",
    "start-feature:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js  --build --watch \" \"node esbuild/esbuild.config.js --dev-test-server\"",
    "start-test-wiremock": "docker-compose -f docker-compose-test.yml up -d",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "test:integration:ci": "cypress run --config video=false",
    "test:integration:ui:ci": "cypress open --e2e --browser chrome",
    "test:integration:local": "npm run start-test-wiremock && npx start-server-and-test start-feature http://localhost:3007/ping test:integration:ci",
    "test:integration:local:ui": "npm run start-test-wiremock && npx start-server-and-test start-feature:dev http://localhost:3007/ping test:integration:ui:ci",
    "test:e2e": "npx playwright test --project=setupDev --project=dev",
    "test:e2e:ui": "npm run test:e2e -- --ui",
    "test:e2e:local": "npx playwright test --project=setupLocal --project=local",
    "test:e2e:local:ui": "npm run test:e2e:local -- --ui",
    "clean": "rm -rf dist test_results",
    "rebuild": "npm run clean && npm i && npm run build",
    "precommit:secrets": "gitleaks git --pre-commit --redact --staged --verbose --config .gitleaks/config.toml",
    "precommit:lint": "node_modules/.bin/lint-staged",
    "precommit:verify": "npm run typecheck && npm test"
  },
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest"
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.891.0",
    "@golevelup/ts-jest": "^0.7.0",
    "@microsoft/applicationinsights-web": "^3.3.9",
    "@ministryofjustice/frontend": "^5.1.5",
    "@ministryofjustice/hmpps-auth-clients": "^0.0.3",
    "@ministryofjustice/hmpps-monitoring": "^0.0.1",
    "@ministryofjustice/hmpps-rest-client": "^0.0.3",
    "@playwright/test": "^1.55.0",
    "@sentry/node": "^10.12.0",
    "applicationinsights": "^2.9.8",
    "body-parser": "^2.2.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.1",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "csrf-sync": "^4.2.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "govuk-frontend": "^5.12.0",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jwt-decode": "^4.0.0",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "qs": "^6.14.0",
    "redis": "^5.8.2",
    "static-path": "^0.0.4",
    "superagent": "^10.2.3"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^4.0.3",
    "@ministryofjustice/eslint-config-hmpps": "^0.0.4",
    "@ministryofjustice/hmpps-precommit-hooks": "^0.0.3",
    "@tsconfig/node22": "^22.0.2",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.18.6",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.8.0",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.1.0",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "cypress": "^15.2.0",
    "cypress-multi-reporters": "^2.0.5",
    "esbuild": "^0.25.10",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "glob": "^11.0.3",
    "jest": "^30.1.3",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^16.1.6",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.10",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.3",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "@jgoz/esbuild-plugin-typecheck": {
      "esbuild": "$esbuild"
    },
    "nunjucks": {
      "chokidar": "$chokidar"
    }
  }
}
